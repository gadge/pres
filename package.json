{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "core/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prewatch": "npm run bootstrap",
    "upint": "yarn upgrade-interactive",
    "pub": "lerna publish --force-publish",
    "build": "lerna exec --parallel -- rollup -c ../../rollup.config.mjs",
    "build-specific": "lerna exec --scope=@pres/${PART:-program} -- rollup -c ../../rollup.config.mjs",
    "build-apps": "lerna exec --scope=@pres/${PART:-top} -- rollup -c ../../rollup.config.mjs",
    "build-core": "lerna exec --scope=@pres/components-${PART:-core} -- rollup -c ../../rollup.config.mjs",
    "build-util": "lerna exec --scope=@pres/util-${PART:-core} -- rollup -c ../../rollup.config.mjs",
    "watch": "lerna exec --parallel -- rollup -c ../../rollup.config.mjs -w",
    "watch-specific": "lerna exec --scope=@pres/components-core -- rollup -c ../../rollup.config.mjs -w"
  },
  "devDependencies": {
    "@analys/crostab": "^0.5.3",
    "@arpel/escape": "^0.0.5",
    "@aryth/rand": "^0.3.26",
    "@babel/core": "^7.16.5",
    "@babel/plugin-proposal-pipeline-operator": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/register": "^7.16.5",
    "@foba/util": "^0.5.0",
    "@palett/cards": "^0.8.18",
    "@palett/convert": "^0.8.18",
    "@palett/dye": "^0.8.18",
    "@palett/dye-factory": "^0.8.18",
    "@palett/enum-color-space": "^0.8.18",
    "@palett/enum-font-effects": "^0.8.18",
    "@palett/fluo": "^0.8.18",
    "@palett/stringify": "^0.8.18",
    "@palett/toner-hex": "^0.8.18",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@valjoux/strategies": "^0.3.8",
    "@vect/matrix": "^0.4.10",
    "@vect/object": "^0.4.10",
    "@vect/vector": "^0.4.10",
    "@vect/vector-index": "^0.4.10",
    "lerna": "^4.0.0",
    "rollup": "^2.62.0",
    "rollup-plugin-fileinfo": "^0.2.19",
    "rollup-plugin-terser": "^7.0.2"
  }
}

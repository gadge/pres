{
  "name": "root",
  "private": true,
  "workspaces": [
    "applications/*",
    "packages/*",
    "utils/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prewatch": "npm run bootstrap",
    "upint": "yarn upgrade-interactive",
    "pub": "lerna publish --force-publish",
    "build": "lerna exec --parallel -- rollup -c ../../rollup.config.js",
    "build-specific": "lerna exec --scope=@pres/${PART:-program} -- rollup -c ../../rollup.config.js",
    "build-application": "lerna exec --scope=@pres/${PART:-top} -- rollup -c ../../rollup.config.js",
    "build-component": "lerna exec --scope=@pres/components-${PART:-core} -- rollup -c ../../rollup.config.js",
    "build-util": "lerna exec --scope=@pres/util-${PART:-core} -- rollup -c ../../rollup.config.js",
    "watch": "lerna exec --parallel -- rollup -c ../../rollup.config.js -w",
    "watch-specific": "lerna exec --scope=@pres/components-core -- rollup -c ../../rollup.config.js -w"
  },
  "devDependencies": {
    "@analys/crostab": "^0.5.2",
    "@aryth/rand": "^0.3.21",
    "@babel/core": "^7.14.6",
    "@babel/plugin-external-helpers": "^7.14.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.5",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/plugin-proposal-pipeline-operator": "^7.14.5",
    "@babel/plugin-proposal-private-methods": "^7.14.5",
    "@babel/plugin-proposal-throw-expressions": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/register": "^7.14.5",
    "@babel/runtime": "^7.14.6",
    "@foba/util": "^0.4.4",
    "@palett/cards": "^0.8.15",
    "@palett/convert": "^0.8.15",
    "@palett/dye": "^0.8.15",
    "@palett/dye-factory": "^0.8.15",
    "@palett/enum-color-space": "^0.8.15",
    "@palett/enum-font-effects": "^0.8.15",
    "@palett/fluo": "^0.8.15",
    "@palett/stringify": "^0.8.15",
    "@palett/toner-hex": "^0.8.15",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@valjoux/strategies": "^0.2.11",
    "@vect/matrix": "^0.4.3",
    "@vect/object": "^0.4.3",
    "@vect/vector": "^0.4.3",
    "@vect/vector-index": "^0.4.3",
    "lerna": "^4.0.0",
    "rollup": "^2.51.2",
    "rollup-plugin-fileinfo": "^0.2.10",
    "rollup-plugin-terser": "^7.0.2"
  }
}
